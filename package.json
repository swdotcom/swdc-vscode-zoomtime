{
    "name": "zoom-time",
    "displayName": "Zoom Time",
    "description": "Zoom Time is an open source plugin that provides zoom interaction right in Visual Studio Code.",
    "version": "0.0.1",
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "test": "node ./out/test/runTest.js"
    },
    "engines": {
        "vscode": "^1.43.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "zoomtime.manageBookmarks",
                "title": "Zoom Time: Edit your bookmarks"
            },
            {
                "command": "zoomtime.displayReadme",
                "title": "Zoom Time: Learn more"
            },
            {
                "command": "zoomtime.sendFeedback",
                "title": "Zoom Time: Submit feedback"
            },
            {
                "command": "zoomtime.addZoomLink",
                "title": "Add zoom link",
                "icon": {
                    "light": "resources/light/add.png",
                    "dark": "resources/dark/add.png"
                }
            },
            {
                "command": "zoomtime.editZoomLink",
                "title": "Edit zoom link",
                "icon": {
                    "light": "resources/light/pencil.png",
                    "dark": "resources/dark/pencil.png"
                }
            },
            {
                "command": "zoomtime.removeZoomLink",
                "title": "Remove zoom link",
                "icon": {
                    "light": "resources/light/remove.svg",
                    "dark": "resources/dark/remove.svg"
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "zoom-time",
                    "title": "Zoom Time",
                    "icon": "resources/dark/camera.png"
                }
            ]
        },
        "views": {
            "zoom-time": [
                {
                    "id": "zoom-menu-tree",
                    "name": "MENU"
                },
                {
                    "id": "zoom-bookmark-tree",
                    "name": "BOOKMARKS"
                }
            ]
        },
        "menus": {
            "view/item/context": [
                {
                    "command": "zoomtime.editZoomLink",
                    "group": "inline@2",
                    "when": "viewItem =~ /parent/"
                },
                {
                    "command": "zoomtime.removeZoomLink",
                    "group": "inline@3",
                    "when": "viewItem =~ /parent/"
                }
            ],
            "view/title": [
                {
                    "command": "zoomtime.addZoomLink",
                    "group": "navigation@2",
                    "when": "view =~ /zoom-menu-tree/"
                }
            ]
        }
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.43.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "open": "^7.0.3"
    }
}
